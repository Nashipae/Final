{{#partial "content"}}
    {{#if editEmployee}}
        <h1>edit this employee</h1>
        <form action="/employees/{{employee.id}}/edit" method="post">
            <br>
            <label for="employee_name">edit this employee details</label>
            <input id="employee_name" name="employee_name" type="text" value="{{employee.employee_name}}">
            <br>
            <label for="departmentid">Update this employee's department:</label>
            <select id="departmentid" name="departmentid">
                {{#each departments}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right department?<a href="/departments/new">add a new one first.</a></p>
            <button type="submit" class="btn btn-success">submit</button>
        </form>
    {{else}}
        <h5>Add a new employee!</h5>
        <form action="/employees/new" method="post">
            {{#if departments}}
            <div class="form-group">
                <label for="employee_name">EMPLOYEE NAME:</label>
                <input class="form-control" id="employee_name" name="employee_name" type="text" placeholder="Please Enter Employees Name" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group">
                <label for="employee_number">EMPLOYEE NUMBER:</label>
                <input class="form-control" id="employee_number" name="employee_number" type="text" placeholder="Please Enter Employee Number" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
                <label for="departmentid">Select department for this employee:</label>
                <select id="departmentid" name="departmentid">
                    {{#each departments}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember" required> I agree that information is valid
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Check this checkbox to submit.</div>
                    </label>
                </div>
                <p>Don't see the right department?<a href="/departments/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a department before you add a employee. <a href="/departments/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-success">submit</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}