{{#partial "content"}}
    {{#if editcoarse}}
        <h1>Edit this coarse!</h1>
        <form action="/coarses/{{coarses.id}}" method="post">
            <div class="form-group">
                <label for="name">Edit this coarse's name</label>
                <input class="form-control" id="newName" name="newName" type="text" value="{{coarses.coarse_name}}">
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group">
                <label for="description">Edit this coarse's Description</label>
                <textarea class="form-control" id="newDescription" name="newDescription" type="text" value="{{coarses.description}}"></textarea>

                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="remember" required> I agree that information is valid
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Check this checkbox to submit.</div>
                </label>
            </div>
            <button type="submit" class="btn btn-warning">submit</button>
        </form>
    {{else}}
        <h5>Add a New coarse!</h5>
        <form action="/coarses/new"  method="post">
            <div class="form-group">
                <label for="name">NAME: </label>
                <input class="form-control" id="coarse_name" placeholder="Enter the coarse Name"  name="coarse_name" type="text" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group">
                <label for="description">DESCRIPTION:</label>
                <textarea class="form-control rounded-0" id="description" name="description" rows="10" placeholder="Please Enter description" required></textarea>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group">
                <label for="duration">DURATION:</label>
                <input class="form-control" id="duration" placeholder="Enter the duration"  name="duration" type="text" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
<!--            <div class = "form-group">-->
<!--            <label for="iconUrl">Insert the content this Coarse:</label>-->
