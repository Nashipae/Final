{{#partial "content"}}
    {{#if editContent}}
        <h1>edit this content</h1>
        <form action="/content/{{content.id}}/edit" method="post">
            <br>
            <label for="article_name">edit this content details</label>
            <textarea id="content" name="content" type="text" value="{{content.content}}"></textarea>
            <br>
            <label for="coarseid">Update this content's coarses:</label>
            <select id="coarseid" name="coarseid">
                {{#each coarses}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right coarses?<a href="/coarses/new">add a new one first.</a></p>
            <button type="submit" class="btn btn-success">submit</button>
        </form>
    {{else}}
        <h5>Add a new content!</h5>
        <form action="/content/new" enctype="multipart/form-data" method="post" id='file-catcher'>
            {{#if coarses}}
            <div class="form-group">
                <label for="content"> Select a Content to upload to the E-class Repository</label><br>
                Files: <input type="file" name="content" value="content"  id='file-input' multiple>
                <div id='file-list-display'> here</div>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember" required> I agree that information is valid
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Check this checkbox to submit.</div>
                    </label>
                </div>
                <p>Don't see the right coarses?<a href="/coarses/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a coarses before you add a content. <a href="/coarses/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-success">submit</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}