{{#partial "content"}}
    {{#if editCategory}}
        <h1>Edit this Engineer!</h1>
        <form action="/categories/{{engineer.id}}" method="post">
            <label for="name">Edit this Engineer's name</label>
            <input id="newCategoryName" name="newCategoryName" type="text" value="{{engineer.name}}">
            <button type="submit" class="btn btn-warning">submit</button>
        </form>
    {{else}}
        <h5>Add a new Engineer!</h5>
        <form action="/categories" method="post">
            <label for="name">Engineer Name</label>
            <input id="name" name="name" type="text">
            <button type="submit" class="btn btn-success btn-sm">submit</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}