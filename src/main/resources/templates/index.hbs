{{#partial "content"}}

    <p> List of Field Operation Coarses</p>

    {{#if coarses}}
     <p> click on the Coarse's Name to view the staff Allocated !!</p>
        {{else}}
        <p>click<a href="/coarses/new">here</a>to add an Coarse</p>
    {{/if}}

    {{#if coarses}}

        <table class="table">
            <thead>
            <tr>
                <th scope="col">No.</th>
                <th scope="col">NAME</th>
                <th scope="col">DESCRIPTION</th>
                <th scope="col">DURATION</th>
            </tr>
            </thead>

        {{#each coarses }}
                <tbody>
                <tr>
                    <td></td>
                    <td><a href="/coarses/{{id}}">{{coarse_name}}</td>
                    <td>{{description}}</td>
                    <td>{{duration}}</td>
                </tr>
                </tbody>
        {{/each}}
        </table>
    {{else}}
        <p>No Records</p>
    {{/if}}
    {{name}}
{{/partial}}

{{> layout.hbs}}