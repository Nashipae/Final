{{#partial "content"}}
    <p>Click <a href="/assetslist">Asset Movement Table </a>to view a list of equipment movement.</p>

    <h3>Equipment Information Capture</h3>
    <form action="/asset/new"  method="post">
        <div class="form-row">
            <div class="form-group col-md-6" >
                <label for="equipmentSerialNumber">Serial No.</label>
                <input type="text" class="form-control" id="equipmentSerialNumber" name="equipmentSerialNumber" placeholder="Serial No.">
            </div>
            <div class="form-group col-md-6">
                <label for="equipmentName">Equipment Name</label>
                <input type="text" class="form-control" id="equipmentName" name="equipmentName"  placeholder="Equipment Name">
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="personWithEquipment">Person with Equipment</label>
                <input type="text" class="form-control" id="idNumber" name="personWithEquipment" placeholder="Person with Equipment">
            </div>
            <div class="form-group col-md-4" >
                <label for="moverId">Mover's ID</label>
                <input type="text" class="form-control" id="moverId" name="moverId" placeholder="ID No.">
            </div>
            <div class="form-group col-md-4" >
                <label for="phonenumber">Phone No.</label>
                <input type="text" class="form-control" id="phonenumber" name="phonenumber" placeholder="Phone No.">
            </div>

        </div>
        <div class="form-row">
        <div class="form-group col-md-6" >
            <label for="typeOfMovement">Incoming or Outgoing</label>
            <input type="text" class="form-control" id="typeOfMovement" name="typeOfMovement" placeholder="Incoming or Outgoing">
        </div>
        <div class="form-group col-md-6">
            <label for="destination">Destination</label>
            <input type="text" class="form-control" id="destination" name="destination"  placeholder="Equipment Destination">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6" >
                <label for="verifier">Verified by</label>
                <input type="text" class="form-control" id="verifier" name="verifier" placeholder="Verified by">
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-success btn-lg">Confirmed</button>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="inputComment">Comments</label>
                <textarea input type="textarea" rows="7" class="form-control" id="inputComment"></textarea>
            </div>
        </div>
    </form>
{{/partial}}

{{> layout.hbs}}