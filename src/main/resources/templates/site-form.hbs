{{#partial "content"}}
    {{#if editSite}}
        <h1>edit this sites</h1>
        <form action="/sites/{{site.id}}" method="post">
            <br>
            <label for="site_name">edit this sites details</label>
            <input id="site_name" name="site_name" type="text" value="{{site.site_name}}">
            <br>
            <label for="engineerid">Update this site's engineer:</label>
            <select id="engineerid" name="engineerid">
                {{#each engineers}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <label for="region">Update this site's region:</label>
            <select id="region" name="region">
                {{#each engineers}}
                    <option value="{{id}}">{{region}}</option>
                {{/each}}
            </select>
            <p>Don't see the right engineer?<a href="/engineers/new">add a new one first.</a></p>
            <button type="submit" class="btn btn-success">submit</button>
        </form>
    {{else}}
        <h5>Add a new site!</h5>
        <form action="/sites" method="post">
            {{#if engineers}}
            <div class="form-group">
                <label for="site_name">SITE NAME:</label>
                <input class="form-control" id="site_name" name="site_name" type="text" placeholder="Please Enter Sites Name" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group">
                <label for="site_number">SITE NUMBER:</label>
                <input class="form-control" id="site_number" name="site_number" type="text" placeholder="Please Enter Site Number" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
                <label for="engineerid">Select engineer for this site:</label>
                <select id="engineerid" name="engineerid">
                    {{#each engineers}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <label for="region">Select region for this site:</label>
                <select id="region" name="region">
                    {{#each engineers}}
                        <option value="{{id}}">{{region}}</option>
                    {{/each}}
                </select>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember" required> I agree that information is valid
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Check this checkbox to submit.</div>
                    </label>
                </div>
                <p>Don't see the right engineer?<a href="/engineers/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a engineer before you add a site. <a href="/engineers/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-success">submit</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}