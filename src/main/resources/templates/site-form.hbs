{{#partial "content"}}
    {{#if editSite}}
        <h1>edit this sites</h1>
        <form action="/sites/{{site.id}}" method="post">
            <br>
            <label for="description">edit this sites details</label>
            <input id="description" name="description" type="text" value="{{site.description}}">
            <br>
            <label for="engineerId">Update this site's engineer:</label>
            <select id="engineerId" name="engineerId">
                {{#each engineers}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right engineer?<a href="/engineers/new">add a new one first.</a></p>
            <button type="submit" class="btn btn-success">submit</button>
        </form>
    {{else}}
        <h5>Add a new site!</h5>
        <form action="/sites" method="post">
            {{#if engineers}}
                <label for="description">Site Name</label>
                <input id="description" name="description" type="text"><br><br>
                <label for="engineerId">select engineer for this site:</label>
                <select id="engineerId" name="engineerId">
                    {{#each engineers}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select><br><br>
                <p>Don't see the right engineer?<a href="/engineers/new">Add a new one first.</a></p>
            {{else}}
                <h5> You'll need to add a engineer before you add a site. <a href="/engineers/new">Add one here.</a> </h5>
            {{/if}}
            <button type="submit" class="btn btn-default">submit</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}